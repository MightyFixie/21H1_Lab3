<Window x:Class="A1_StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A1_StopWatch"
        mc:Ignorable="d"
        Title="StopWatch" Height="230" Width="420" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="190" FontSize="48" Click="StartButton_Click"/>
        <Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="190" FontSize="48" Click="ClearButton_Click"/>
        <Label x:Name="StopWatchDisplay" Content="0:00:00,00" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="72" FontWeight="Bold"/>

    </Grid>
</Window>
